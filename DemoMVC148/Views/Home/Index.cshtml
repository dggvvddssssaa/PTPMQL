@{
    ViewData["Title"] = "Nhập thông tin người dùng";
}

<h2>Nhập thông tin người dùng</h2>

<form method="post">
    <label>Họ tên:</label>
    <input type="text" name="tenNguoiDung" required />

    <br /><br />

    <label>Năm sinh:</label>
    <input type="number" name="namSinh" required />

    <br /><br />

    <button type="submit">Gửi</button>
</form>

@if (ViewBag.ThongBao != null)
{
    <h3>@ViewBag.ThongBao</h3>
}